/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f0f0f0;
  font-family: 'PingFang SC', 'Helvetica Neue', Arial, sans-serif;
}

.container {
  width: 90%;
  max-width: 600px;
  background-color: #fff;
  border-radius: 16px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  padding: 20px;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 85vh; 
}

.image-container {
  width: 100%;
  height: 60vh; 
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f9f9f9;
  border-radius: 8px;
  margin-bottom: 20px;
  overflow: hidden;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 8px;
}

.placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  width: 100%;
  background-color: #f9f9f9;
  border-radius: 8px;
}

.placeholder-text {
  font-size: 16px;
  color: #999;
}

.result {
  margin-bottom: 20px;
  text-align: center;
  width: 100%; 
}

.result-error {
  font-size: 24px;
  color: #e64340;
  font-weight: bold;
}

.result-text {
  font-size: 18px;
  color: #333;
  font-weight: bold;
}

.result-value {
  font-size: 24px;
  color: #1aad19;
  font-weight: bold;
}

.upload-button {
  width: 100%;
  padding: 20px;
  background-color: #1aad19;
  color: #fff;
  border: none;
  border-radius: 8px;
  font-size: 18px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.upload-button:active {
  background-color: #128c14;
}

.upload-button[disabled] {
  background-color: #ccc;
  cursor: not-allowed;
}

.version {
  margin-top: 10px;
  font-size: 11px;
  color: #999;
}